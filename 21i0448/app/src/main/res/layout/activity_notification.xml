<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_circle" />


        <Button
            android:id="@+id/back_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/a_arrow_back_ios_24"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Notifications"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:src="@drawable/outline_circle" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:layout_gravity="right"
            android:layout_marginStart="300dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_more_options_24"
            ></ImageView>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Today"
        android:textSize="18dp"
        android:textColor="#80000000"
        android:textStyle="bold"
        android:paddingTop="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/tristar"
            android:background="@drawable/circle_o"
            android:layout_marginStart="10dp"
            android:clipToOutline="true"
            ></ImageView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="120dp"
            android:text="Tristar"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="5dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="280dp"
            android:text="02:14 PM"
            android:textSize="18dp"
            android:textColor="#80000000"
            android:paddingTop="5dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="120dp"
            android:layout_marginTop="40dp"
            android:text="Your Duel with Alex will start today. Be well prepared to participate "
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/alex"
            android:background="@drawable/circle_o"
            android:layout_marginStart="10dp"
            android:clipToOutline="true"
            ></ImageView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="120dp"
            android:text="Alex"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="5dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="280dp"
            android:text="10:10 AM"
            android:textSize="18dp"
            android:textColor="#80000000"
            android:paddingTop="5dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="120dp"
            android:layout_marginTop="40dp"
            android:text="Started workout!"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingTop="5dp"
            />
    </RelativeLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Yesterday"
        android:textSize="18dp"
        android:textColor="#80000000"
        android:textStyle="bold"
        android:paddingTop="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <ImageView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/mike"
            android:background="@drawable/circle_o"
            android:layout_marginStart="10dp"
            android:clipToOutline="true"
            ></ImageView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="120dp"
            android:text="Mike Tyson"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="5dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="280dp"
            android:text="10:32 AM"
            android:textSize="18dp"
            android:textColor="#80000000"
            android:paddingTop="5dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="120dp"
            android:layout_marginTop="40dp"
            android:text="Just messaged you!"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingTop="5dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home_white_24dp"
            android:backgroundTint="#80000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            ></ImageView>
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/a_notifications_24"
            android:backgroundTint="#3E859F"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"

            ></ImageView>
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/a_chat_24"
            android:backgroundTint="#80000000"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            ></ImageView>
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/person_white_24dp"
            android:backgroundTint="#80000000"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"

            ></ImageView>

    </LinearLayout>

</LinearLayout>