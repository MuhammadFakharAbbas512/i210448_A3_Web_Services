<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Signup">

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account."
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginVertical="50dp"
        />



    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:hint="Name"
        android:background="@drawable/rounded_textboxes"
        android:layout_below="@+id/signup_text"
        android:layout_marginTop="30dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:hint="Email"
        android:background="@drawable/rounded_textboxes"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:height="55dp"
        android:background="@drawable/rounded_textboxes"
        android:hint="Password"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:hint="Re-Enter Password"
        android:background="@drawable/rounded_textboxes"
        android:layout_below="@+id/pass"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"/>


    <LinearLayout
        android:id="@+id/checkbox_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/mobile_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use mobile number"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox_layout"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:hint=" +xx"
        android:textSize="25sp"
        android:background="@drawable/rounded_textboxes"
        android:layout_below="@+id/checkbox_layout"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:hint="Mobile number"
        android:background="@drawable/rounded_textboxes"
        android:layout_below="@+id/checkbox_layout"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:paddingStart="10dp"/>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_layout"
        android:layout_marginTop="20dp"
        android:id="@+id/continue_button"
        android:text="Continue"
        android:textSize="20sp"
        android:background="@drawable/rounded_textboxes"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have an account?"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/login_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_text"
        android:text="Sign In"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"/>


</RelativeLayout>