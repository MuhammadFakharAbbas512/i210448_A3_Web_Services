<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mentor_rv">


    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/book_btn1"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:background="@drawable/rounded_textboxes"
            android:backgroundTint="#DADADA"
            android:layout_marginEnd="0dp"
            ></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="35dp"
        android:gravity="bottom"
        android:paddingStart="10dp"
        android:background="@drawable/rounded_textboxes"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"

            >

            <TextView
                android:id="@+id/mentorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample 1"
                android:textSize="12dp"
                android:textColor="#000000"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$500/Session"
                android:textColor="#FFC107"
                android:textSize="7dp"
                android:layout_marginStart="80dp"></TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead - Technology Officer"
            android:textColor="#000000"
            android:textSize="8dp"
            android:layout_marginStart="3dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_dot"
                android:layout_marginTop="3dp"
                ></ImageView>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="#1E7E04"
                android:textSize="8dp"
                android:layout_marginStart="5dp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_heart_24dp"
                android:layout_marginStart="114dp"
                android:paddingBottom="5dp"
                ></ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>