<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="#DEF8F8"
    android:orientation="horizontal"
    tools:context=".pg12addmentor">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:src="@drawable/double_circle"
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/baseline_arrow_back_24"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingStart="25dp"
            android:text="Add New Mentor"
            android:textColor="#157177"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingStart="150dp"
            android:text="Help us expand!"
            android:textColor="#157177"
            android:textSize="15dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/video_btn"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/rounded_dotted_boxes"
                        ></ImageView>

                    <Button
                        android:id="@+id/video_btn2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/videocam_white_24dp"
                        android:backgroundTint="#157177"
                        android:gravity="center"></Button>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/photo_btn"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/rounded_dotted_boxes"
                        ></ImageView>

                    <Button
                        android:id="@+id/photo_btn2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/outline_photo_camera_24"
                        android:backgroundTint="#157177"
                        android:gravity="center"></Button>

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="356dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_textboxes"
                android:padding="10dp"
                android:hint="Enter Name"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/desc"
                android:layout_width="356dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_textboxes"
                android:padding="10dp"
                android:hint="Enter Description"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fee_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:text="Fee price/session"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/fee"
                android:layout_width="356dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_textboxes"
                android:padding="10dp"
                android:hint="Enter Fee"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/status"
                    android:layout_width="356dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_textboxes"
                    android:padding="10dp"
                    android:hint="Available"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/baseline_arrow_down_24"></ImageView>
            </RelativeLayout>

            <Button
                android:id="@+id/upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/rounded_textboxes"
                android:backgroundTint="#157177"
                android:text="Upload"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"></Button>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:background="#50C2C9"
            android:gravity="bottom"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#157177"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:paddingTop="15dp"
                android:src="@drawable/home_white_24dp"></ImageView>
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_margin="12dp"
                android:background="@drawable/search_black_24dp"
                android:backgroundTint="#52A9A7"
                ></ImageView>
            <ImageView
                android:id="@+id/add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="50dp"
                android:src="@drawable/add_circle_24"
                android:background="@drawable/circle_backoutliner"></ImageView>

            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:paddingTop="15dp"
                android:layout_gravity="right"
                android:src="@drawable/outline_chat_24"></ImageView>
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="45dp"
                android:paddingTop="15dp"
                android:src="@drawable/person_white_24dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#157177"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:paddingStart="20dp"
                android:textColor="#52A9A7"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:paddingStart="20dp"
                android:textColor="#52A9A7"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:paddingStart="150dp"
                android:textColor="#52A9A7"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:paddingStart="30dp"
                android:textColor="#52A9A7"
                ></TextView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>