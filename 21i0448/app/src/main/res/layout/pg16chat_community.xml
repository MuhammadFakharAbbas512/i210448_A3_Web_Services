<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DEF8F8"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".pg16chat_community">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background_top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp">
            </Button>

            <ImageView
                android:id="@+id/call_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_call_24"
                android:backgroundTint="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="310dp"
                ></ImageView>
            <ImageView
                android:id="@+id/videocall_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/videocam_white_24dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="350dp"
                ></ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="John Cooper's"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Community"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"

            android:layout_marginStart="5dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/outline_image_circle"
                android:src="@mipmap/john_copper"
                android:clipToOutline="true"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="1dp"
                android:background="@drawable/outline_circle_status"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_status_sign"
                android:layout_marginStart="75dp"
                ></ImageView>
        </RelativeLayout>
    </LinearLayout>




    <!---Recycler View here for chat-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:layout_above="@id/r1"
        android:layout_height="wrap_content"
        android:id="@+id/chatRecyclerView"/>



    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_textboxes"
            android:backgroundTint="#50C2C9"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:id="@+id/file"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/baseline_attach_file_24"></ImageView>
            <ImageView
                android:id="@+id/img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/image_white_24dp"></ImageView>

            <EditText
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Type something ..."
                android:textColorHint="#DEF8F8"
                android:textSize="15dp"></EditText>

            <ImageView
                android:id="@+id/cam_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/outline_photo_camera_24"></ImageView>
            <ImageView
                android:id="@+id/audio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/audio_voice_24"></ImageView>
            <ImageView
                android:id="@+id/send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/outline_send_24"></ImageView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#157177"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:paddingTop="15dp"
                android:src="@drawable/home_white_24dp"></ImageView>
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_margin="12dp"
                android:background="@drawable/search_black_24dp"
                android:backgroundTint="#52A9A7"
                ></ImageView>
            <ImageView
                android:id="@+id/add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="50dp"
                android:src="@drawable/add_circle_24"
                android:background="@drawable/circle_backoutliner"></ImageView>

            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline_chat_24"
                android:backgroundTint="#DEF8F8"
                android:paddingTop="15dp"></ImageView>

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="45dp"
                android:paddingTop="15dp"
                android:src="@drawable/person_white_24dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#157177"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:paddingStart="20dp"
                android:textColor="#52A9A7"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:paddingStart="20dp"
                android:textColor="#52A9A7"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:paddingStart="150dp"
                android:textColor="#DEF8F8"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:paddingStart="30dp"
                android:textColor="#52A9A7"
                ></TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>