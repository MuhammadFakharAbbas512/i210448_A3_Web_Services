                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/john_btn"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#DADADA"
                    android:layout_marginEnd="10dp"
                    ></ImageButton>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"
                    android:background="@drawable/rounded_textboxes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Cooper"
                            android:textSize="12dp"
                            android:textColor="#000000"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UX Designer @ Google"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="3dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/green_dot"
                            android:layout_marginTop="3dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:textColor="#1E7E04"
                            android:textSize="8dp"
                            android:layout_marginStart="5dp"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favorite_heart_24dp"
                            android:layout_marginStart="70dp"
                            android:paddingBottom="5dp"
                            ></ImageView>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#DADADA"
                    android:layout_marginEnd="10dp"
                    ></ImageButton>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"
                    android:background="@drawable/rounded_textboxes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emma Phillips"
                            android:textSize="12dp"
                            android:textColor="#000000"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lead - Technology Officer"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="3dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/green_dot"
                            android:layout_marginTop="3dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:textColor="#1E7E04"
                            android:textSize="8dp"
                            android:layout_marginStart="5dp"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favorite_heart_24dp"
                            android:layout_marginStart="75dp"
                            android:paddingBottom="5dp"
                            ></ImageView>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#DADADA"
                    android:layout_marginEnd="10dp"
                    ></ImageButton>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"

                    android:background="@drawable/rounded_textboxes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Michael"
                            android:textSize="12dp"
                            android:textColor="#000000"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NLP Expert"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="3dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/green_dot"
                            android:layout_marginTop="3dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:textColor="#1E7E04"
                            android:textSize="8dp"
                            android:layout_marginStart="5dp"></TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dead_heart"
                            android:layout_marginStart="55dp"
                            android:paddingBottom="5dp"
                            ></ImageView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="My Reviews"
            android:textColor="#157177"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"></TextView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#52C0C7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Cooper"
                            android:textSize="12dp"
                            android:textColor="#DFF2F5"
                            android:textStyle="bold"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"

                            ></ImageView>

                        <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_star_rate_24"
                        ></ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_half_24"
                            ></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="John provided excellent prototyping techniques and insights. I highly recommend him"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"></TextView>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#52C0C7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emma Phillips"
                        android:textSize="12dp"
                        android:textColor="#DFF2F5"
                        android:textStyle="bold"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"

                            ></ImageView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_half_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/baseline_star_outline_24"
                            android:backgroundTint="#FDC70B"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Her tips were valuable. Would love to connect again."
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"></TextView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#52C0C7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jane"
                        android:textSize="12dp"
                        android:textColor="#DFF2F5"
                        android:textStyle="bold"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"

                            ></ImageView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_rate_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_star_half_24"
                            ></ImageView>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/baseline_star_outline_24"
                            android:backgroundTint="#FDC70B"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Impressive Session"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"></TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#157177"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:id="@+id/home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:paddingTop="15dp"
                android:src="@drawable/home_white_24dp"></ImageView>
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
