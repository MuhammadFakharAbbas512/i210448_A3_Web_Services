<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pg21profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
       app:layout_constraintGuide_percent = "0.25"></androidx.constraintlayout.widget.Guideline>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#DEF8F8"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="20dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My Profile"
            android:textColor="#157770"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <Button
            android:id="@+id/more_options"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_more_options_24"
            android:layout_marginStart="175dp"
            android:layout_marginTop="25dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#DEF8F8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline">
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#B4EBE4"></TextView>
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#81B8B1"></TextView>
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#B4EBE4"></TextView>
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#81B8B1"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#DEF8F8"
        app:layout_constraintBottom_toBottomOf="@+id/guideline">
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#81B8B1"></TextView>
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#B4EBE4"></TextView>
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#81B8B1"></TextView>
        <TextView
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_boxes"
            android:backgroundTint="#B4EBE4"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#DDF7F7"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="Ali"
            android:textColor="#157177"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="75dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_location_on_24"
                >
            </ImageView>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="Islamabad"
                android:textColor="#908B8B"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"></TextView>
        </LinearLayout>


