<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pg22edit_profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent = "0.3"></androidx.constraintlayout.widget.Guideline>

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#50C2C9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="20dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            />

    </LinearLayout>
    <LinearLayout
             android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#DEF8F8"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:textColor="#157177"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingTop="5dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="Ali"
            android:text=""
            android:textColorHint="#80000000"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:textColor="#157177"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingTop="5dp"/>

        <EditText
            android:id="@+id/email"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="ali@gmail.com"
            android:textColorHint="#80000000"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/contact_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="15dp"
            android:textColor="#157177"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingTop="5dp"/>

        <EditText
            android:text=""
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="+92 321 2242022"
            android:textColorHint="#80000000"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/country_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="15dp"
            android:textColor="#157177"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingTop="5dp"/>

        <EditText
            android:id="@+id/country"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="Pakistan"
            android:textColorHint="#80000000"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="15dp"
            android:textColor="#157177"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingTop="5dp"/>

        <EditText
            android:id="@+id/city"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="Islamabad"
            android:textColorHint="#80000000"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:id="@+id/uploadprofile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#157177"
            android:background="@drawable/rounded_textboxes"
            android:text="Upload Profile"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/edit_profile"
        android:background="@drawable/circle_o"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:clipToOutline="true"
        ></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>