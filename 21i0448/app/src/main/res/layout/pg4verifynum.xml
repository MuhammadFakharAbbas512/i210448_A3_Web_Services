<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="#DEF8F8"
    android:orientation="vertical"
    tools:context=".pg4Verify">


    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_margin="10dp">
        </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Verify your phone number"
                android:textColor="#157177"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingStart="35dp"></TextView>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="We've sent a code to "
                android:textColor="#000000"
                android:textSize="17dp"
                android:paddingStart="50dp"
                />
            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+92 321 2242022 "
                android:textColor="#157177"
                android:textSize="17dp"></TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/optET1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="45dp"></EditText>
            <EditText
                android:id="@+id/optET2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="105dp"></EditText>
            <EditText
                android:id="@+id/optET3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="165dp"></EditText>
            <EditText
                android:id="@+id/optET4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="225dp"></EditText>
            <EditText
                android:id="@+id/optET5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="285dp"></EditText>
            <EditText
                android:id="@+id/optET6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="345dp"></EditText>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:paddingStart="20dp"
                >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_o"
                android:layout_margin="5dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_o"
                android:layout_margin="5dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_o"
                android:layout_margin="5dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_o"
                android:layout_margin="5dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_o"
                android:layout_margin="5dp"
                ></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_o"
                android:layout_margin="5dp"
                ></ImageView>
        </LinearLayout>

        </RelativeLayout>
  <Button
      android:id="@+id/verify_btn"
    android:layout_weight="1"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:backgroundTint="#157177"
    android:background="@drawable/rounded_textboxes"
    android:layout_gravity="center"
    android:text="Verify"
    android:textColor="@color/white"
    android:textStyle="bold"
      android:layout_margin="10dp"

    ></Button>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send code again in "
            android:textColor="@color/black"
            android:gravity="center"  >
         </TextView>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00:20 "
                android:textColor="#157177"
                android:textStyle="bold"
                ></TextView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#50C2C9">

        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#50C2C9"
            android:paddingStart="0dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp">

        <Button
            android:id="@+id/num1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#90DADE"
            android:background="@drawable/rounded_textboxes"
            android:text="1"
            android:textSize="45dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            ></Button>
            <Button
                android:id="@+id/num2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="2"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                ></Button>
            <Button
                android:id="@+id/num3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="3"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                ></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#50C2C9"
            android:paddingStart="0dp"

            android:layout_margin="5dp">

            <Button
                android:id="@+id/num4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="4"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></Button>
            <Button
                android:id="@+id/num5_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="5"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                ></Button>
            <Button
                android:id="@+id/num6_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="6"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                ></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#50C2C9"
            android:paddingStart="0dp"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/num7_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="7"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                ></Button>
            <Button
                android:id="@+id/num8_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="8"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                ></Button>
            <Button
                android:id="@+id/num9_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="9"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                ></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#50C2C9"
            android:paddingStart="100dp"
            android:gravity="center|top"
            android:layout_margin="5dp">


            <Button
                android:id="@+id/num0_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#90DADE"
                android:background="@drawable/rounded_textboxes"
                android:text="0"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                ></Button>
            <ImageView
                android:id="@+id/clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_backspace_24"
                android:paddingStart="50dp"
                android:layout_margin="20dp"
                ></ImageView>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>