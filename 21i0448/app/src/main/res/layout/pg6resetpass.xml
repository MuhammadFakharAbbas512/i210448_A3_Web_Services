<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="#DEF8F8"
    android:orientation="vertical"
    tools:context=".pg6resetpass">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_margin="10dp">
        </Button>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Reset Password?"
            android:textColor="#157177"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingStart="15dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Please type a new password and re-enter the password. Type something you will remember!"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingStart="15dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="New Password"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"></TextView>
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="Enter New Password"
            android:textColorHint="#80000000"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Confirm Password"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"></TextView>
        <EditText
            android:id="@+id/repass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textboxes"
            android:hint="Re-enter Password"
            android:textColorHint="#80000000"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/resetpass_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#157177"
            android:background="@drawable/rounded_textboxes"
            android:layout_gravity="center"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="10dp"

            ></Button>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="1dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't want to reset password? "
                android:textColor="@color/black"
                >
            </TextView>
            <TextView
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Login"
                android:textColor="#157177"
                android:textStyle="bold"
                ></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>