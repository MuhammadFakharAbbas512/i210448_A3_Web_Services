<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="#DEF8F8"
    android:orientation="horizontal"
    tools:context=".pg9searchresults">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:src="@drawable/double_circle"

        ></ImageView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginTop="55dp">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_margin="10dp">
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Search Results"
            android:textColor="#157177"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingStart="15dp"></TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:gravity="right"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="220dp"
                android:layout_marginBottom="25dp">
                <Button
                    android:id="@+id/filter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textboxes"
                    android:backgroundTint="#BCE1E2"
                    android:layout_marginEnd="20dp"
                    android:text="Filter"
                    android:textStyle="bold"
                    android:textColor="#157177"
                    android:paddingEnd="10dp"
                    ></Button>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expand_down_24"
                android:layout_margin="15dp"
                android:paddingStart="270dp"></ImageView>

            </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_rv"
            android:padding="10dp"
            ></androidx.recyclerview.widget.RecyclerView>
<LinearLayout
    android:layout_weight="5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/mentorimg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/rounded_textboxes"
        android:backgroundTint="#DADADA"
        android:layout_marginEnd="0dp"
        ></ImageView>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="35dp"
        android:gravity="bottom"
        android:paddingStart="10dp"
        android:background="@drawable/rounded_textboxes"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"

            >

            <TextView
                android:id="@id/mentorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample 1"
                android:textSize="12dp"
                android:textColor="#000000"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@id/mentorfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$500/Session"
                android:textColor="#FFC107"
                android:textSize="7dp"
                android:layout_marginStart="80dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@id/mentordesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead - Technology Officer"
                android:textColor="#000000"
                android:textSize="8dp"
                android:layout_marginStart="3dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_dot"
                android:layout_marginTop="3dp"
                ></ImageView>
            <TextView
                android:id="@id/mentorstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="#1E7E04"
                android:textSize="8dp"
                android:layout_marginStart="5dp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_heart_24dp"
                android:layout_marginStart="114dp"
                android:paddingBottom="5dp"
                ></ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#157177"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:paddingTop="15dp"
                android:src="@drawable/home_white_24dp"></ImageView>
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_margin="12dp"
                android:background="@drawable/search_black_24dp"
                android:backgroundTint="#DEF8F8"
                ></ImageView>
            <ImageView
                android:id="@+id/add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="50dp"
                android:src="@drawable/add_circle_24"></ImageView>
            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:paddingTop="15dp"
                android:layout_gravity="right"
                android:src="@drawable/outline_chat_24"></ImageView>
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="45dp"
                android:paddingTop="15dp"
                android:src="@drawable/person_white_24dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#157177"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:paddingStart="20dp"
                android:textColor="#52A9A7"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:paddingStart="20dp"
                android:textColor="#DEF8F8"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:paddingStart="150dp"
                android:textColor="#52A9A7"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:paddingStart="40dp"
                android:textColor="#52A9A7"
                ></TextView>

        </LinearLayout>
        </LinearLayout>




</RelativeLayout>